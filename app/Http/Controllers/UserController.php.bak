<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use App\Models\User;
use App\Models\Staff;
use App\Models\Role;
use App\Models\Designation;
use App\Models\Rank;
use Illuminate\Support\Facades\Hash;
use Illuminate\Support\Facades\DB;
use Illuminate\Support\Arr;

class UserController extends Controller
{
    public function __construct()
    {
        $this->middleware(['auth', 'role:super_admin']);
    }

    public function index(Request $request)
    {
        return view('pages.users.index');
    }

    public function create()
    {
        $roles = Role::pluck('name','name')->all();
        $permissions = \Spatie\Permission\Models\Permission::all();
        $designations = Designation::all();
        $ranks = Rank::all();
        return view('pages.users.create', compact('roles', 'permissions', 'designations', 'ranks'));
    }

    public function store(Request $request)
    {
        $this->validate($request, [
            'name' => 'required',
            'email' => 'required|email|unique:users,email',
            'password' => 'required|same:confirm-password',
            'roles' => 'required',
            // 'user_type' => 'required|in:department', // Enforce department only
        ]);

        try {
            DB::beginTransaction();

            $input = $request->all();
            $input['password'] = Hash::make($input['password']);
            $input['is_department_user'] = 1; // Always department user from here
            $input['status'] = 'active';
            
            // Create User
            $user = User::create([
                'name' => $input['name'],
                'email' => $input['email'],
                'password' => $input['password'],
                'is_department_user' => $input['is_department_user'],
                'cnic' => $request->cnic,
                'status' => $input['status'],
            ]);

            $user->assignRole($request->input('roles'));
            
            // Assign Direct Permissions if any
            if ($request->has('permissions')) {
                $permissions = array_map('intval', $request->permissions);
                $user->syncPermissions($permissions);
            }

            // Create Staff Record
            Staff::create([
                'user_id' => $user->id,
                'first_name' => $request->first_name,
                'last_name' => $request->last_name,
                'belt_no' => $request->belt_no,
                'phone' => $request->phone,
                'email' => $user->email,
                'cnic' => $request->cnic,
                'gender' => $request->gender,
                'status' => $request->status ?? 'active',
                'rank_id' => $request->rank_id,
                'created_by' => auth()->id(),
            ]);

            DB::commit();
            return redirect()->route('users.index')->with('success', 'User created successfully');

        } catch (\Exception $e) {
            DB::rollback();
            return redirect()->back()->with('error', 'Error creating user: ' . $e->getMessage())->withInput();
        }
    }

    public function edit($id)
    {
        $user = User::find($id);
        $roles = Role::pluck('name','name')->all();
        $permissions = \Spatie\Permission\Models\Permission::all();
        $userRole = $user->roles->pluck('name','name')->all();
        $userPermissions = $user->permissions->pluck('name')->toArray();
        $designations = Designation::all();
        $ranks = Rank::all();
        
        return view('pages.users.edit', compact('user', 'roles', 'permissions', 'userRole', 'userPermissions', 'designations', 'ranks'));
    }

    public function update(Request $request, $id)
    {
        $this->validate($request, [
            'name' => 'required',
            'email' => 'required|email|unique:users,email,'.$id,
            'roles' => 'required'
        ]);

        try {
            DB::beginTransaction();

            $input = $request->all();
            // Password update handled separately now, but keeping basic update logic
            $input = Arr::except($input, array('password'));

            $user = User::find($id);
            $user->update($input);
            DB::table('model_has_roles')->where('model_id',$id)->delete();
            $user->assignRole($request->input('roles'));

            // Sync Direct Permissions
            if ($request->has('permissions')) {
                $permissions = array_map('intval', $request->permissions);
                $user->syncPermissions($permissions);
            } else {
                $user->syncPermissions([]);
            }

            // Update associated records if necessary
            if ($user->staff) {
                $user->staff->update([
                    'first_name' => $request->first_name,
                    'last_name' => $request->last_name,
                    'belt_no' => $request->belt_no,
                    'phone' => $request->phone,
                    'cnic' => $request->cnic,
                    'gender' => $request->gender,
                    'rank_id' => $request->rank_id,
                    'status' => $request->status ?? $user->staff->status,
                ]);
            }

            DB::commit();
            return redirect()->route('users.index')->with('success', 'User updated successfully');

        } catch (\Exception $e) {
            DB::rollback();
            return redirect()->back()->with('error', 'Error updating user: ' . $e->getMessage());
        }
    }

    public function destroy($id)
    {
        User::find($id)->delete();
        return redirect()->route('users.index')->with('success', 'User deleted successfully');
    }

    public function changePassword(Request $request, $id)
    {
        $request->validate([
            'password' => 'required|same:confirm-password',
        ]);

        $user = User::find($id);
        $user->password = Hash::make($request->password);
        $user->save();

        return redirect()->back()->with('success', 'Password changed successfully.');
    }

    public function changeEmail(Request $request, $id)
    {
        $request->validate([
            'email' => 'required|email|unique:users,email,'.$id,
        ]);

        $user = User::find($id);
        $user->email = $request->email;
        $user->save();

        return redirect()->back()->with('success', 'Email changed successfully.');
    }
}
